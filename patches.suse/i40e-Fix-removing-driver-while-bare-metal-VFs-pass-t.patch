 		if (test_bit(I40E_VF_STATE_INIT, &pf->vf[i].vf_states))
@@ -1545,15 +1558,6 @@ void i40e_free_vfs(struct i40e_pf *pf)
 		i40e_vsi_wait_queues_disabled(pf->vsi[pf->vf[i].lan_vsi_idx]);
 	}
 
